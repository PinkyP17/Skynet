<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="762.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../style/Enhancement.css" fx:controller="controller.PersonalInformationControlller">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="626.0" spacing="40.0" styleClass="card" VBox.vgrow="ALWAYS">
         <children>
            <!-- Profile Picture Section -->
            <StackPane id="avatar" maxHeight="-Infinity" maxWidth="-Infinity">
               <children>
                  <Circle fx:id="profilePictureFrame" fill="#dbdbdb58" radius="100.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="0.0" />
                  <Button contentDisplay="TOP" ellipsisString="" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#changeImage" text="upload image" wrapText="true">
                     <graphic>
                        <FontIcon iconLiteral="mdi-camera" iconSize="30" />
                     </graphic>
                     <font>
                        <Font name="Arial" size="11.0" />
                     </font>
                  </Button>
               </children>
            </StackPane>
            
            <!-- ENHANCEMENT 1: Profile Completeness Meter -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="enhancement-card">
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <FontIcon iconLiteral="mdi-account-check" iconSize="20" styleClass="icon-success" />
                        <Label text="Profile Completeness" styleClass="enhancement-title">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <ProgressBar fx:id="completenessProgressBar" prefWidth="500.0" progress="0.0" styleClass="completeness-progress" />
                  <Label fx:id="completenessLabel" text="0% Complete" styleClass="completeness-label">
                     <font>
                        <Font name="Arial" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="completenessHintLabel" text="Fill in all fields to reach 100%" styleClass="hint-label" wrapText="true">
                     <font>
                        <Font name="Arial" size="11.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- ENHANCEMENT 2: Loyalty Tier Visualizer -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="enhancement-card">
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <FontIcon iconLiteral="mdi-star" iconSize="20" styleClass="icon-warning" />
                        <Label text="Loyalty Tier Status" styleClass="enhancement-title">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Circle fx:id="tierBadge" radius="25.0" fill="#C0C0C0" stroke="WHITE" strokeWidth="2.0" />
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label fx:id="tierLabel" text="Silver Member" styleClass="tier-label">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="pointsLabel" text="0 points" styleClass="points-label">
                                 <font>
                                    <Font name="Arial" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label fx:id="nextTierLabel" text="Next tier: Gold (5,000 points)" styleClass="hint-label">
                           <font>
                              <Font name="Arial" size="11.0" />
                           </font>
                        </Label>
                        <ProgressBar fx:id="tierProgressBar" prefWidth="400.0" progress="0.0" styleClass="tier-progress" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- ENHANCEMENT 3: Document Expiry Alerts -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="enhancement-card">
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <FontIcon iconLiteral="mdi-alert" iconSize="20" styleClass="icon-danger" />
                        <Label text="Document Expiry Alerts" styleClass="enhancement-title">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="alertCountBadge" text="0" styleClass="alert-badge">
                           <font>
                              <Font name="Arial Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <ListView fx:id="alertListView" prefHeight="100.0" prefWidth="500.0" styleClass="alert-list" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Original Form Fields -->
            <VBox alignment="CENTER" maxWidth="-Infinity" spacing="40.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField fx:id="txtfirstname" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="400.0" promptText="FirstName" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <styleClass>
                              <String fx:value="TransparentTextField" />
                              <String fx:value="underLine-field" />
                           </styleClass>
                        </TextField>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtlastname" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="400.0" promptText="LastName" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <styleClass>
                              <String fx:value="TransparentTextField" />
                              <String fx:value="underLine-field" />
                           </styleClass>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
                     <children>
                        <DatePicker fx:id="txtbirthday" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="400.0" promptText="Birthday" styleClass="underLine-field" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </DatePicker>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                        <ChoiceBox fx:id="genderBox" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="400.0" styleClass="underLine-field" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
                     <children>
                        <SearchableComboBox fx:id="countryBox" maxHeight="-Infinity" prefHeight="40.0" prefWidth="400.0" promptText="Country" styleClass="underLine-field" HBox.hgrow="ALWAYS" />
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtemail" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="400.0" promptText="Email" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="17.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <styleClass>
                              <String fx:value="TransparentTextField" />
                              <String fx:value="underLine-field" />
                           </styleClass>
                        </TextField>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" spacing="15.0">
               <children>
                  <Button maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" mnemonicParsing="false" onAction="#updateData" prefHeight="50.0" prefWidth="250.0" text="Update Profile" textFill="WHITE" HBox.hgrow="ALWAYS" />
                  <Button fx:id="refreshButton" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" mnemonicParsing="false" onAction="#refreshEnhancements" prefHeight="50.0" prefWidth="150.0" text="Refresh Stats" textFill="WHITE" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>

